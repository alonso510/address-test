---
import Layout from './Layout.astro';

export interface Props {
  title: string;
  industry: string;
}

const { title, industry } = Astro.props;
---

<Layout title={title}>
  <div class="industry-layout">
    <aside>
      <h3>Industries</h3>
      <ul>
        <li><a href="#technology">Technology</a></li>
        <li><a href="#healthcare">Healthcare</a></li>
        <li><a href="#finance">Finance</a></li>
        <li><a href="#education">Education</a></li>
      </ul>
    </aside>
    <main>
      <h1>{industry}</h1>
      <slot />
    </main>
  </div>
</Layout>

<style>
  .industry-layout {
    display: flex;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  aside {
    width: 200px;
    background-color: #f8f9fa;
    padding: 1rem;
    border-radius: 0.5rem;
  }

  aside h3 {
    margin-top: 0;
  }

  aside ul {
    list-style: none;
    padding: 0;
  }

  aside li {
    margin-bottom: 0.5rem;
  }

  aside a {
    text-decoration: none;
    color: var(--text-color);
  }

  aside a:hover {
    color: var(--primary-color);
  }

  main {
    flex: 1;
  }
</style>