---
const baseUrl = import.meta.env.BASE_URL;
---


<nav>
  <div class="navbar-container">
    <a href="/" class="logo">
      <img src="public/logo-transparent-png.png" alt="AI Innovate Logo" />
    </a>
    <button class="menu-toggle" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
    <div class="nav-links">
      <a href={baseUrl}>Home</a>
      <a href={`${baseUrl}services`}>Services</a>
      <a href={`${baseUrl}industry`}>Industry</a>
      <a href={`${baseUrl}contact`}>Engage Today</a>
    </div>
  </div>
</nav>

<style>
  nav {
    background-color: #0056b3;
    padding: 1rem 0;
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
  }

  .navbar-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 1rem;
    position: relative;  /* Added for absolute positioning of menu-toggle */
  }

  .logo img {
    height: 40px;
    width: auto;
  }

  .nav-links {
    display: flex;
    gap: 1rem;
  }

  .nav-links a {
    color: white;
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    transition: background-color 0.3s ease;
  }

  .nav-links a:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .menu-toggle {
    display: none;
  }

  @media (max-width: 768px) {
    .menu-toggle {
      display: block;
      background: none;
      border: none;
      cursor: pointer;
      position: absolute;
      top: 50%;
      right: 1rem;
      transform: translateY(-50%);
      z-index: 1001;
    }

    .menu-toggle span {
      display: block;
      width: 25px;
      height: 3px;
      background-color: white;
      margin: 5px 0;
      transition: 0.3s;
    }

    .nav-links {
      display: none;
      flex-direction: column;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background-color: #0056b3;
      padding: 1rem;
    }

    .nav-links.active {
      display: flex;
    }

    .menu-toggle.active span:nth-child(1) {
      transform: rotate(-45deg) translate(-5px, 6px);
    }

    .menu-toggle.active span:nth-child(2) {
      opacity: 0;
    }

    .menu-toggle.active span:nth-child(3) {
      transform: rotate(45deg) translate(-5px, -6px);
    }
  }
</style>

<script>
  function initMobileMenu() {
    const menuToggle = document.querySelector('.menu-toggle');
    const navLinks = document.querySelector('.nav-links');

    if (menuToggle && navLinks) {
      menuToggle.addEventListener('click', () => {
        navLinks.classList.toggle('active');
        menuToggle.classList.toggle('active');
      });
    }
  }

  // Run on initial load
  initMobileMenu();

  // If using Astro's View Transitions, reinitialize after each navigation
  document.addEventListener('astro:page-load', initMobileMenu);
</script>