<nav>
  <div class="navbar-container">
    <a href="/" class="logo">AI Innovate</a>
    <button class="menu-toggle" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
    <div class="nav-center">
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/services">Services</a></li>
        <li><a href="/industry">Industry</a></li>
        <li><a href="/engage-today">Engage Today</a></li>
      </ul>
    </div>
  </div>
</nav>

<style>
  nav {
    background-color: #0056b3; /* ADA compliant blue */
    padding: 1rem 0;
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
  }

  .navbar-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 1rem;
  }

  .logo {
    color: white;
    font-size: 1.5rem;
    font-weight: bold;
    text-decoration: none;
  }

  .nav-center {
    flex-grow: 1;
    display: flex;
    justify-content: center;
  }

  .nav-links {
    list-style: none;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
    padding: 0;
  }

  .nav-links li {
    margin: 0 1rem;
  }

  .nav-links a {
    color: white;
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    display: block;
    transition: background-color 0.3s ease;
    border-radius: 4px;
  }

  .nav-links a:hover {
    background-color: rgba(255, 255, 255, 0.2); /* Semi-transparent white for highlight */
  }

  .menu-toggle {
    display: none;
  }

  @media (max-width: 768px) {
    .navbar-container {
      flex-wrap: wrap;
    }

    .nav-center {
      order: 3;
      width: 100%;
    }

    .menu-toggle {
      display: block;
      background: none;
      border: none;
      cursor: pointer;
    }

    .menu-toggle span {
      display: block;
      width: 25px;
      height: 3px;
      background-color: white;
      margin: 5px 0;
      transition: all 0.3s ease;
    }

    .nav-links {
      display: none;
      flex-direction: column;
      width: 100%;
    }

    .nav-links.active {
      display: flex;
    }

    .nav-links li {
      margin: 0.5rem 0;
    }

    .nav-links a {
      width: 100%;
      text-align: center;
    }

    .nav-links a:hover {
      background-color: rgba(255, 255, 255, 0.1); /* Lighter highlight for mobile */
    }
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const menuToggle = document.querySelector('.menu-toggle');
    const navLinks = document.querySelector('.nav-links');

    if (menuToggle && navLinks) {
      menuToggle.addEventListener('click', () => {
        navLinks.classList.toggle('active');
        menuToggle.classList.toggle('active');
      });
    }
  });
</script>