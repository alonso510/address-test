---
const baseUrl = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL.slice(0, -1) : import.meta.env.BASE_URL;

---

<footer class="site-footer">
  <div class="footer-content">
    <div class="footer-left">
      <img src={`${baseUrl}/logo-transparent-png.png`} alt="Ellofant LLC Logo" class="footer-logo" />
    </div>
    <div class="footer-right">
      <nav class="footer-nav">
        <a href="/faq">FAQ</a>
        <a href="/privacy-policy">Privacy Policy</a>
        <a href="/cookies">Cookies</a>
        <a href="/terms-of-use">Terms of Use</a>
      </nav>

    </div>
  </div>
  <div class="footer-bottom">
    <p>&copy; 2024 Ellofant LLC. All rights reserved.</p>
  </div>
</footer>

<style>
  .site-footer {
    background-color: #0056b3;
    color: white;
    padding: 3rem 0 1rem;
    clip-path: polygon(0 15%, 100% 0, 100% 100%, 0% 100%);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .footer-left {
    display: flex;
    align-items: center;
  }

  .footer-logo {
    width: 80px;
    height: auto;
    margin-right: 1rem;
  }
  .footer img {
    height: 35px; /* Adjust as needed */
    width: auto;
  }
  .company-name {
    font-size: 1.5rem;
    font-weight: bold;
  }

  .footer-right {
    text-align: right;
  }

  .footer-nav {
    margin-bottom: 1rem;
  }

  .footer-nav a {
    color: white;
    text-decoration: none;
    margin-left: 1.5rem;
    transition: color 0.3s ease;
  }

  .footer-nav a:hover {
    color: #f0f0f0;
  }

  .social-icons a {
    color: white;
    font-size: 1.5rem;
    margin-left: 1rem;
    transition: transform 0.3s ease;
  }

  .social-icons a:hover {
    transform: translateY(-3px);
  }

  .footer-bottom {
    text-align: center;
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      align-items: center;
    }

    .footer-left, .footer-right {
      text-align: center;
      margin-bottom: 2rem;
    }

    .footer-nav a {
      display: block;
      margin: 0.5rem 0;
    }

    .social-icons {
      margin-top: 1rem;
    }
  }
</style>