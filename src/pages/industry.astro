  </main>
</Layout>


<style>
  .industries-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    padding-top: calc(60px + 2rem); /* Adjust 60px to match your navbar height */
    background-color: #f0f4f8;
    color: #333;
  }

  h1 {
    text-align: center;
    color: #0056b3;
    margin-bottom: 2rem;
    font-size: 2.5rem;
    margin-top: 75px
  }

  .industry-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    justify-content: center;
  }

  .industry-card {
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .industry-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .card-header {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }

  .industry-icon {
    width: 40px;
    height: 40px;
    margin-right: 1rem;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    flex-shrink: 0;
  }

  .card-header h2 {
    margin: 0;
    font-size: 1.3rem;
    color: #0056b3;
    line-height: 1.2;
  }

  .industry-card p {
    margin-bottom: 1rem;
    flex-grow: 1;
  }

  .industry-card ul {
    list-style-type: none;
    padding-left: 0;
    margin-bottom: 0;
  }

  .industry-card li {
    margin-bottom: 0.5rem;
    padding-left: 1.5rem;
    position: relative;
  }

  .industry-card li::before {
    content: 'â€¢';
    color: #0056b3;
    position: absolute;
    left: 0;
  }

  @media (max-width: 1200px) {
    .industry-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .industries-page {
      padding-top: calc(50px + 1rem); /* Adjust 50px to match your mobile navbar height */
    }

    h1 {
      font-size: 2rem;
    }

    .industry-grid {
      grid-template-columns: 1fr;
    }

    .card-header h2 {
      font-size: 1.2rem;
    }
  }
</style>