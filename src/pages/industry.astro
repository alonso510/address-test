<style>
  .industries-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    padding-top: calc(60px + 2rem);
    background-color: #f0f4f8;
    color: #333;
  }

  h1 {
    text-align: center;
    color: #0056b3;
    margin-bottom: 2rem;
    font-size: 2.5rem;
    margin-top: 75px
  }

  .industry-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    justify-content: center;
  }

  .industry-card {
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .industry-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .card-header {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }

  .industry-icon {
    width: 40px;
    height: 40px;
    margin-right: 1rem;
    flex-shrink: 0;
  }

  .industry-icon svg {
    width: 100%;
    height: 100%;
    stroke: white;
    fill: #0056b3;
  }

  .card-header h2 {
    margin: 0;
    font-size: 1.3rem;
    color: #0056b3;
    line-height: 1.2;
  }

  .industry-card p {
    margin-bottom: 0.25rem; /* Reduced from 0.75rem */
    font-size: 0.9rem;
    line-height: 1.4;
    font-weight: bold; 
  }

  .industry-card ul {
    list-style-type: none;
    padding-left: 0;
    margin-top: 0; /* Changed from 0.5rem to 0 */
    margin-bottom: 0;
  }

  .industry-card li {
    margin-bottom: 0.4rem;
    padding-left: 1.25rem;
    position: relative;
    font-size: 0.85rem;
    line-height: 1.3;
  }

  .industry-card li:last-child {
    margin-bottom: 0;
  }

  .industry-card li:last-child {
    margin-bottom: 0; /* Remove margin from the last list item */
  }


  @media (max-width: 1200px) {
    .industry-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .industries-page {
      padding-top: calc(50px + 1rem);
    }

    h1 {
      font-size: 2rem;
    }

    .industry-grid {
      grid-template-columns: 1fr;
    }

    .card-header h2 {
      font-size: 1.2rem;
    }
  }
  .cta {
    background-color: #0056b3;
    color: white;
    text-align: center;
    padding: 4rem 2rem;
    clip-path: polygon(0 15%, 100% 0, 100% 100%, 0 100%);
  }

  .cta h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .cta p {
    font-size: 1.2rem;
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .cta-button {
    display: inline-block;
    background-color: white;
    color: #0056b3;
    padding: 0.75rem 1.5rem;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .cta-button:hover {
    background-color: #f0f0f0;
    transform: translateY(-3px);
  }
</style>

